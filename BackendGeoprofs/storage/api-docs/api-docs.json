{
    "openapi": "3.0.0",
    "info": {
        "title": "Geoprofs",
        "description": "API documentatie voor geoprofs verlofsregistratiesysteem",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://laravel.test/api",
            "description": "Local api server"
        }
    ],
    "paths": {
        "/auth/request": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Get the currently authenticated user (requires Bearer token)",
                "operationId": "bed316293511b21d73531c2926b9ce36",
                "responses": {
                    "200": {
                        "description": "Authenticated user returned"
                    },
                    "401": {
                        "description": "Not authenticated"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login with username and password (returns Sanctum token)",
                "operationId": "25ae12e27b55dd95a5288e572e51f84e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Dr. Emmett Flatley"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful, returns user and token"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout and revoke the current Sanctum token",
                "operationId": "6eebb82ad8f2839db7b9be403d2c6cab",
                "responses": {
                    "200": {
                        "description": "Token revoked successfully"
                    },
                    "401": {
                        "description": "Not authenticated"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get users",
                "operationId": "23679253d16f34d2972249751e3631dd",
                "responses": {
                    "200": {
                        "description": " users returned"
                    },
                    "401": {
                        "description": "No users"
                    },
                    "403": {
                        "description": "un authorized"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/{user}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get specific user",
                "operationId": "6f888b021bf178e7e5dcbfe7746c2f9e",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User returned"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/{user}/verlofaanvraag": {
            "get": {
                "tags": [
                    "Verlofaanvraag"
                ],
                "summary": "Get all verlofaanvragen of a specific user",
                "operationId": "a0f7a9db451e2b85de597fe02faf6491",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of verlofaanvragen retrieved successfully"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Verlofaanvraag"
                ],
                "summary": "Create a new verlofaanvraag for a user",
                "operationId": "58d31b7230ee49d9791609f6d8d0f1e4",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "description": "Verlofaanvraag details",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "reden",
                                    "startdatum",
                                    "einddatum",
                                    "status"
                                ],
                                "properties": {
                                    "reden": {
                                        "type": "string",
                                        "example": "Vakantie"
                                    },
                                    "startdatum": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-07-01"
                                    },
                                    "einddatum": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-07-10"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "aangevraagd"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Verlofaanvraag successfully created"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/{user}/verlofaanvraag/{verlofaanvraag}": {
            "get": {
                "tags": [
                    "Verlofaanvraag"
                ],
                "summary": "Get a specific verlofaanvraag of a user",
                "operationId": "24f2972b78de6a372a6e2017a8bd6c24",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "verlofaanvraag",
                        "in": "path",
                        "description": "ID of the verlofaanvraag",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Verlofaanvraag retrieved successfully"
                    },
                    "404": {
                        "description": "Verlofaanvraag not found"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/{user}/verlofaanvraag/{verlofaanvraag}/approve": {
            "put": {
                "tags": [
                    "Verlofaanvraag"
                ],
                "summary": "Approve a verlofaanvraag (admin only)",
                "operationId": "3fcf8a1ab67e6daff412de65d65932fa",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "verlofaanvraag",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "requestBody": {
                    "description": "Approval status update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status"
                                ],
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "example": "Goedgekeurd"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Verlofaanvraag approved successfully"
                    },
                    "403": {
                        "description": "Forbidden (not an admin)"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/{user}/verlofaanvraag/{verlofaanvraag}/reject": {
            "put": {
                "tags": [
                    "Verlofaanvraag"
                ],
                "summary": "Reject a verlofaanvraag (admin only)",
                "operationId": "eb53ad0d053dd6ec4282b7a8937896c8",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "verlofaanvraag",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "requestBody": {
                    "description": "Rejection reason and status update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status",
                                    "afkeuringsreden"
                                ],
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "example": "Afgekeurd"
                                    },
                                    "afkeuringsreden": {
                                        "type": "string",
                                        "example": "Te weinig vakantiedagen"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Verlofaanvraag rejected successfully"
                    },
                    "403": {
                        "description": "Forbidden (not an admin)"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
